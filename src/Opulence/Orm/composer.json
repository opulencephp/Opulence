{
  "name": "opulence/orm",
  "description": "The Opulence Orm library",
  "keywords": [
    "PHP",
    "orm",
    "repository",
    "unit of work",
    "data mapper"
  ],
  "authors": [
    {
      "name": "David Young",
      "email": "dave@opulencephp.com",
      "role": "Architect"
    }
  ],
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Opulence\\Orm\\": ""
    },
    "exclude-from-classmap": [
        "/Tests/"
    ]
  },
  "require": {
    "php": "^7.3 || ^8.0",
    "opulence/databases": "1.2.*"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.2.x-dev"
    }
  },
  "suggest": {
    "opulence/memcached": "For Memcached data mappers",
    "opulence/redis": "For Redis data mappers"
  },
  "minimum-stability": "dev"
}
